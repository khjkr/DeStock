{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceRoot": "./src",
    "outDir": "./dist",
    "removeComments": true
  },
  "exclude": ["node_modules", "./dist/**/*"],
  "include": ["./src/**/*", ".env"]
}